// Static tasks configuration.
//
// Example:
[
  {
    "label": "Run",
    "command": "./build/todo-c",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "reveal_target": "center",
    "shell": "system",
    "tags": ["dev"]
  },
  {
    "label": "CMake: Recompile",
    "command": "cmake -S . -B build",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "no_focus",
    "reveal_target": "dock",
    "hide": "on_success",
    "shell": "system",
    "tags": ["dev", "cmake"]
  },
  {
    "label": "CMake: Recompile (Debug)",
    "command": "cmake -S . -B build -DCMAKE_BUILD_TYPE=Debug",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "never",
    "reveal_target": "dock",
    "hide": "on_success",
    "shell": "system",
    "tags": ["dev", "cmake"]
  },
  {
    "label": "CMake: Build",
    "command": "cmake --build build",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "never",
    "reveal_target": "dock",
    "hide": "on_success",
    "shell": "system",
    "tags": ["dev", "cmake"]
  }
]
